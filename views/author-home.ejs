<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Author's Page</title>
    <!-- link to Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <!-- Start of Bootstrap Container -->
    <div class="container-fluid">
      <!-- Start of Bootstrap Navbar -->
      <nav
        class="navbar navbar-expand-lg bg-body-tertiary"
        data-bs-theme="dark"
      >
        <div class="container-fluid">
          <a class="navbar-brand" href="#"> Pen Your Thoughts </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a
                  class="nav-link"
                  aria-current="page"
                  onclick="window.location.href='/'"
                >
                  Home
                </a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link"
                  aria-current="page"
                  onclick="window.location.href='/author/settings'"
                >
                  Settings
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" onclick="window.location.href='/blogs/new'"
                  >Create New Draft</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <!-- End of Bootstrap Navbar -->

      <!-- Start of Bootstrap Background -->
      <div
        class="bg-dark text-white text-center py-5"
        style="
          background-image: url('assets/download.jpeg');
          background-size: cover;
          background-position: center;
        "
      >
        <h1 class="display-4">Pen Your Thoughts</h1>
        <h3 class="display-5">Vania Abbas</h3>
        <h5 class="display-8">Author's Home Page</h5>
        <button
          type="button"
          class="btn btn-light btn-lg"
          onclick="window.location.href='/blogs/new'"
        >
          Create New Draft
        </button>
      </div>
      <!-- End of Bootstrap Background -->

      <!-- Start of Bootstrap table for draft articles/blogs -->
      <h2>Drafts</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Created At</th>
            <th scope="col">Published At</th>
            <th scope="col">Last Modified</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
            <th scope="col">Publish</th>
          </tr>
        </thead>
        <tbody>
          <% let draftsExists=false; %> <% blogs.forEach(blog=> { %> <% if
          (blog.status=='rough' ) { %>
          <tr>
            <th scope="row"><%= blog.title %></th>
            <td><%= blog.created_at %></td>
            <td><%= blog.published_at %></td>
            <td><%= blog.last_modified %></td>
            <td>
              <!-- edit button -->
              <button
                type="button"
                class="btn btn-success btn-sm"
                onclick="window.location.href='/blogs/edit/<%= blog.id %>'"
              >
                Edit
              </button>
            </td>

            <!-- delete button -->
            <td>
              <form
                action="/blogs/delete/<%= blog.id %>"
                method="POST"
                style="display: inline"
              >
                <button type="submit" class="btn btn-danger btn-sm">
                  <%= Delete %>
                </button>
              </form>
            </td>

            <!-- publish button -->
            <td>
              <form
                action="/blogs/<%= blog.id %>"
                method="POST"
                style="display: inline"
              >
                <button type="submit" class="btn btn-primary btn-sm">
                  Publish
                </button>
              </form>
            </td>
          </tr>
          <% draftsExists=true; %> <% } %> <% }); %> <% if (!draftsExists) { %>
          <p>No Draft blogs yet.</p>
          <% } %>
        </tbody>
      </table>
      <!-- End of Bootstrap table for draft articles/blogs -->

      <!-- Start of Bootstrap table for published articles/blogs -->
      <h2>Published</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Created At</th>
            <th scope="col">Published At</th>
            <th scope="col">Last Modified</th>
            <th scope="col">Likes</th>
            <th scope="col">Dislikes</th>
            <th scope="col">Views</th>
            <th scope="col">Comments</th>
            <th scope="col">Share</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% let publishedExists=false; %> <% blogs.forEach(blog=> { %> <% if
          (blog.status=='published' ) { %>
          <tr>
            <th scope="row"><%= blog.title %></th>
            <td><%= blog.created_at %></td>
            <td><%= blog.published_at %></td>
            <td><%= blog.last_modified %></td>
            <td><%= blog.like_count %></td>
            <td><%= blog.dislike_count %></td>
            <td><%= blog.views_count %></td>
            <td><%= blog.comment_count %></td>
            <td>
              <!-- share button -->
              <button
                type="button"
                class="btn btn-primary btn-sm"
                onclick="window.location.href='/reader/blogs/<%= blog.id %>'"
              >
                Share
              </button>
            </td>
            <td>
              <!-- delete button -->
              <form
                action="/blogs/delete/<%= blog.id %>"
                method="POST"
                style="display: inline"
              >
                <button type="submit" class="btn btn-danger btn-sm">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% publishedExists=true; %> <% } %> <% }); %> <% if (!publishedExists)
          { %>
          <p>No Published blogs yet.</p>
          <% } %>
        </tbody>
      </table>
      <!-- End of Bootstrap table for published articles/blogs -->
    </div>
    <!-- End of Bootstrap Container -->

    <!-- Start of Bootstrap JavaScript -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <!-- End of Bootstrap JavaScript -->
  </body>
</html>
