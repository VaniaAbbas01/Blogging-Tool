<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Author's Dashboard</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .hero {
        background-image: url("assets/download.jpeg");
        background-size: cover;
        background-position: center;
        color: white;
        padding: 4rem 1rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
      }
      .card {
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
      }
      .table thead {
        background-color: #343a40;
        color: white;
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="#">Pen Your Thoughts</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" onclick="window.location.href='/'">Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                onclick="window.location.href='/author/settings'"
                >Settings</a
              >
            </li>
            <li class="nav-item">
              <a
                class="btn btn-outline-light btn-sm ms-2"
                onclick="window.location.href='/blogs/new'"
              >
                New Draft
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <!-- Hero Section -->
    <div class="hero text-center">
      <h1 class="display-4 fw-bold">Welcome Back, Vania Abbas</h1>
      <h5 class="fw-light">Your Author Dashboard</h5>
      <button
        class="btn btn-light btn-lg mt-3"
        onclick="window.location.href='/blogs/new'"
      >
        Start Writing
      </button>
    </div>

    <div class="container my-5">
      <!-- Drafts Section -->
      <div class="card">
        <div class="card-body">
          <h3 class="card-title mb-4">Drafts</h3>
          <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Created At</th>
                  <th>Published At</th>
                  <th>Last Modified</th>
                  <th>Edit</th>
                  <th>Delete</th>
                  <th>Publish</th>
                </tr>
              </thead>
              <tbody>
                <% let draftsExists=false; %> <% blogs.forEach(blog=> { %> <% if
                (blog.status=='rough') { %>
                <tr>
                  <td><%= blog.title %></td>
                  <td><%= blog.created_at %></td>
                  <td><%= blog.published_at %></td>
                  <td><%= blog.last_modified %></td>
                  <td>
                    <button
                      class="btn btn-success btn-sm"
                      onclick="window.location.href='/blogs/edit/<%= blog.id %>'"
                    >
                      Edit
                    </button>
                  </td>
                  <td>
                    <form
                      action="/blogs/delete/<%= blog.id %>"
                      method="POST"
                      style="display: inline"
                    >
                      <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                      </button>
                    </form>
                  </td>
                  <td>
                    <form
                      action="/blogs/<%= blog.id %>"
                      method="POST"
                      style="display: inline"
                    >
                      <button type="submit" class="btn btn-primary btn-sm">
                        Publish
                      </button>
                    </form>
                  </td>
                </tr>
                <% draftsExists=true; %> <% } %> <% }); %> <% if (!draftsExists)
                { %>
                <tr>
                  <td colspan="7" class="text-center text-muted">
                    No Draft blogs yet. Start writing your first one!
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Published Section -->
      <div class="card">
        <div class="card-body">
          <h3 class="card-title mb-4">Published</h3>
          <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Created At</th>
                  <th>Published At</th>
                  <th>Last Modified</th>
                  <th>Likes</th>
                  <th>Dislikes</th>
                  <th>Views</th>
                  <th>Comments</th>
                  <th>Share</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                <% let publishedExists=false; %> <% blogs.forEach(blog=> { %> <%
                if (blog.status=='published') { %>
                <tr>
                  <td><%= blog.title %></td>
                  <td><%= blog.created_at %></td>
                  <td><%= blog.published_at %></td>
                  <td><%= blog.last_modified %></td>
                  <td><%= blog.like_count %></td>
                  <td><%= blog.dislike_count %></td>
                  <td><%= blog.views_count %></td>
                  <td><%= blog.comment_count %></td>
                  <td>
                    <button
                      class="btn btn-primary btn-sm"
                      onclick="window.location.href='/reader/blogs/<%= blog.id %>'"
                    >
                      Share
                    </button>
                  </td>
                  <td>
                    <form
                      action="/blogs/delete/<%= blog.id %>"
                      method="POST"
                      style="display: inline"
                    >
                      <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                      </button>
                    </form>
                  </td>
                </tr>
                <% publishedExists=true; %> <% } %> <% }); %> <% if
                (!publishedExists) { %>
                <tr>
                  <td colspan="10" class="text-center text-muted">
                    No Published blogs yet. Publish one to see it here!
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
