<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title><%= title %></title>
  </head>

  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold" href="#"> <%= name %> </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" onclick="window.location.href='/'"
                ><%= nav1 %></a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <!-- Hero Section -->
    <header
      class="bg-dark text-white text-center py-5 mb-4"
      style="
        background-image: url('/assets/download.jpeg');
        background-size: cover;
        background-position: center;
      "
    >
      <div class="container">
        <h1 class="display-5 fw-bold"><%= heading %></h1>
        <p class="text-light small mt-2">
          Created: <%= blog.created_at %> | Updated: <%= blog.last_modified %>
        </p>
      </div>
    </header>
    <!-- End Hero Section -->

    <!-- Blog Edit Form -->
    <div class="container-md">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
          <h4 class="mb-4 text-center fw-semibold">✏️ Edit Blog</h4>
          <form action="/blogs/edit/<%= blog.id %>" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label fw-semibold"
                ><%= slot1 %></label
              >
              <input
                type="text"
                name="title"
                id="title"
                class="form-control"
                value="<%= blog.title %>"
                placeholder="Enter blog title"
              />
            </div>
            <div class="mb-3">
              <label for="content" class="form-label fw-semibold"
                ><%= slot2 %></label
              >
              <textarea
                name="content"
                id="content"
                rows="8"
                class="form-control"
                placeholder="Write your content here..."
              >
<%= blog.content %></textarea
              >
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <button type="submit" class="btn btn-primary px-4">
                <%= button1 %>
              </button>
              <button
                type="button"
                class="btn btn-outline-secondary px-4"
                onclick="window.location.href='/author/blogs'"
              >
                <%= button2 %>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- End Blog Edit Form -->

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
