<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <!-- Start of Bootstrap Container -->
    <div class="container-fluid">

      <!-- Start of Bootstrap Background -->
      <div class="bg-dark text-white text-center py-5" style="background-image: url('assets/download.jpeg'); background-size: cover; background-position: center;">
            <h1 class="display-1"><%= title.name%></h1>
            <h5><%= title.sub_message %></h5>
            <a onclick="window.location.href='/author/blogs'" class="btn btn-light btn-lg">Author</a>
            <a onclick="window.location.href='/reader/blogs'" class="btn btn-light btn-lg">Reader</a>
      </div>
      <!-- End of Bootstrap Background -->
       
    </div>
    <!-- End of Bootstrap Container -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>

