<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= blog.title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>

  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/"> Pen Your Thoughts</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" onclick="window.location.href='/'"
                >Home</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Hero -->
    <header
      class="text-white text-center py-5"
      style="
        background-image: url('/assets/download.jpeg');
        background-size: cover;
        background-position: center;
      "
    >
      <div class="bg-dark bg-opacity-50 p-5 rounded">
        <h1 class="display-4 fw-bold"><%= blog.title %></h1>
      </div>
    </header>

    <!-- Blog Content -->
    <main class="container my-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <!-- Blog Card -->
          <div class="card shadow-lg border-0 mb-5">
            <div class="card-body p-4">
              <h5 class="card-text" style="line-height: 1.7">
                <%= blog.content %>
              </h5>
            </div>
          </div>

          <!-- Like/Dislike Section -->
          <div class="d-flex justify-content-center gap-3 mb-4">
            <form action="/likes/<%=blog.id%>" method="POST">
              <button type="submit" class="btn btn-outline-primary px-4">
                üëç Like
                <span class="badge bg-primary"><%= blog.like_count %></span>
              </button>
            </form>
            <form action="/dislikes/<%=blog.id%>" method="POST">
              <button type="submit" class="btn btn-outline-danger px-4">
                üëé Dislike
                <span class="badge bg-danger"><%= blog.dislike_count %></span>
              </button>
            </form>
          </div>

          <!-- Reactions -->
          <div class="d-flex justify-content-center flex-wrap gap-2 mb-5">
            <form action="/reactions/<%=blog.id%>" method="POST">
              <button type="submit" class="btn btn-dark btn-sm">
                üòÅ Happy
              </button>
            </form>
            <form action="/reactions/<%=blog.id%>" method="POST">
              <button type="submit" class="btn btn-dark btn-sm">
                üòî Not Satisfied
              </button>
            </form>
            <form action="/reactions/<%=blog.id%>" method="POST">
              <button type="submit" class="btn btn-dark btn-sm">
                üò° Angry
              </button>
            </form>
            <form action="/reactions/<%=blog.id%>" method="POST">
              <button type="submit" class="btn btn-dark btn-sm">
                üôå Legendary
              </button>
            </form>
          </div>

          <!-- Comments Section -->
          <div class="card shadow-lg border-0 mb-5">
            <div class="card-header bg-dark text-white">
              <h4 class="mb-0">Comments</h4>
            </div>
            <div class="card-body">
              <!-- Comment Form -->
              <form action="/comments/<%=blog.id%>" method="POST" class="mb-4">
                <div class="mb-3">
                  <textarea
                    name="comment"
                    class="form-control"
                    id="comment"
                    rows="3"
                    placeholder="Write your comment here..."
                    required
                  ></textarea>
                </div>
                <div class="mb-3">
                  <input
                    type="text"
                    class="form-control"
                    name="commenter_name"
                    placeholder="Your Name"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-dark px-4">
                  Post Comment
                </button>
              </form>

              <!-- Comments List -->
              <ul class="list-group list-group-flush">
                <% if (comments.length > 0) { %> <% comments.forEach(comment =>
                { %>
                <li class="list-group-item">
                  <div class="d-flex align-items-start">
                    <img
                      src="/public/assets/Female.jpg"
                      width="40"
                      class="rounded-circle me-3"
                      alt="avatar"
                    />
                    <div>
                      <h6 class="mb-0"><%= comment.commenter_name %></h6>
                      <small class="text-muted d-block mb-1"
                        ><%= comment.commented_at %></small
                      >
                      <p class="mb-0"><%= comment.comment %></p>
                    </div>
                  </div>
                </li>
                <% }) %> <% } else { %>
                <p class="text-muted">
                  No comments yet. Be the first to share your thoughts!
                </p>
                <% } %>
              </ul>
            </div>
          </div>

          <!-- Back Button -->
          <div class="text-center mb-5">
            <button
              type="button"
              class="btn btn-outline-dark px-4"
              onclick="window.location.href='/reader/blogs'"
            >
              Back to Blogs
            </button>
          </div>
        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
