<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <!-- Start of Bootstrap Container -->
  <div class="container-fluid">

    <!-- Start of Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary " data-bs-theme="dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <%= name %>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" onclick="window.location.href='/'">Home</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End of Bootstrap Navbar -->

    <!-- Start of Bootstrap Background -->
    <div class="bg-dark text-white text-center py-5"
      style="background-image: url('assets/download.jpeg'); background-size: cover; background-position: center;">
      <h1 class="display-4">
        <%= name %>
      </h1>
      <h3 class="display-5">
        <%= author %>
      </h3>
      <h5 class="display-8">
        <%= sub_heading %>
      </h5>
    </div>
    <!-- End of Bootstrap Background -->

    <!-- Start of small Bootstrap Container -->
    <div class="container-sm">
      <ul class="list-group list-group-flush">
        <% let publishedExists=false; %>
          <% blogs.forEach(blog=> { %>
            <% if (blog.status=='published' ) { %>
              <li class="list-group-item" style="background-color: rgb(247, 247, 247)">
                <h3>
                  <a onclick="window.location.href = '/reader/blogs/<%= blog.id %>'">
                    <%= blog.title %>
                  </a>
                </h3>
                <p style="font-size: x-small; color: grey;">
                  Published by: <%= blog.author_name %> on <%= blog.created_at %>
                </p>     
                <p>
                  <%= blog.content %>
                </p>
              </li>
              <% publishedExists=true; %>
                <% } %>
                  <% }); %>
                    <% if (!publishedExists) { %>
                      <p>No Blogs yet.</p>
                      <% } %>
      </ul>
    </div>
    <!-- End of small Bootstrap Container -->

  </div>
  <!-- End of Bootstrap Container -->

  <!-- Start of Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <!-- End of Bootstrap JavaScript -->
   
</body>

</html>